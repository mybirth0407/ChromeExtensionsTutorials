{
  "manifest_version": 2,

  "name": "Rich Twitter Notifier",

  "description": "Allow you to get notifications immediately as desktop ones",

  "icons": {
    "32": "icon.png",
    "64": "icon.png"
  },

  "background": {
    // "script": "jquery"
    "page": "background.html"
  },

  "version": "1.0",

  "permissions": [
    "notifications",
    "https://twitter.com/i/notifications"
  ]
}
